{
  "compilerOptions": {
    "target": "es5",
    "jsx": "preserve",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "declaration": true,
    // "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/**/*.ts",
    "runner.tsx"
  ],
  "compileOnSave": false
}